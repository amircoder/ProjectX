<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorButtonRipple">

    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/button_rounded_radius" />
            <solid android:color="@color/colorGray50" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/button_rounded_radius" />
            <solid android:color="@color/colorGold80" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="@dimen/button_rounded_radius" />
            <solid android:color="@color/colorPrimaryButton" />
        </shape>
    </item>

</selector>